<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Snake Main Menu" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF3BB62F" Offset="1"/>
                <GradientStop Color="#FF2D6428" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="350"/>
            <RowDefinition Height="525"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <StackPanel.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF3CE80A" Offset="1"/>
                </RadialGradientBrush>
            </StackPanel.Background>
            <Image Height="200" Source="snake.jpg"/>
            <Button x:Name="PlayButton" Content="Play" FontSize="22" Opacity="0.75" Click="PlayButton_Click"/>
            <Button x:Name="ExitButton" Content="Exit" FontSize="22" Opacity="0.75" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
