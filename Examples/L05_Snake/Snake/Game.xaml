<Window x:Name="GameWindow" x:Class="Snake.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Game" Height="600" Width="800">
    <Grid Background="Black">
        <Canvas x:Name="gameCanvas">
            <TextBlock x:Name="TxtMessage" TextWrapping="Wrap" Text="Let's Play" Height="92" Width="115" FontSize="24" FontWeight="Bold" Foreground="#FFDDFF03"/>
        </Canvas>


    </Grid>
</Window>
