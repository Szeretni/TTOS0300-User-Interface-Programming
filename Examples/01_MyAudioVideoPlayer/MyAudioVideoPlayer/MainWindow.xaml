<Window x:Class="MyAudioVideoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAudioVideoPlayer"
        mc:Ignorable="d"
        Title="Hannu's Best VideoAudioPlayer" Height="350" Width="525">
    <Grid Background="#FF534F4F">
        <TextBox x:Name="PathTextBox" HorizontalAlignment="Left" Height="23" Margin="32,25,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="358"/>
        <Button x:Name="Play" Content="Play" HorizontalAlignment="Left" Margin="32,77,0,0" VerticalAlignment="Top" Width="75" Click="Play_Click"/>
        <Button x:Name="Stop" Content="Stop" HorizontalAlignment="Left" Margin="127,77,0,0" VerticalAlignment="Top" Width="75" Click="Stop_Click"/>
        <Button x:Name="Browse" Content="Browse" HorizontalAlignment="Left" Margin="412,24,0,0" VerticalAlignment="Top" Width="75" Height="24" Click="Browse_Click"/>
        <MediaElement x:Name="MediaElement" HorizontalAlignment="Left" Height="172" Margin="32,123,0,0" VerticalAlignment="Top" Width="455"/>

    </Grid>
</Window>
